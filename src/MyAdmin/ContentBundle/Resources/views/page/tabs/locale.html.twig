<div class="panel-body">
        {% set localized_form = attribute(form.translations, locale) %}
        <fieldset class="form-horizontal">
            <div class="form-group required {% if localized_form.title.vars.errors|length %} has-error {% endif %}">
                <label class="col-sm-2 control-label">
                    {{ 'title'|trans }}:
                </label>
                <div class="col-sm-10">
                    {{ form_widget(localized_form.title) }}
                    <div class="text-danger">
                        {{ form_errors(localized_form.title) }}
                    </div>
                </div>
            </div>
            <div class="form-group {% if localized_form.description.vars.errors|length %} has-error {% endif %}">
                <label class="col-sm-2 control-label">
                    {{ 'description'|trans }}:
                </label>
                <div class="col-sm-10">
                    {{ form_widget(localized_form.description) }}
                    <div class="text-danger">
                        {{ form_errors(localized_form.description) }}
                    </div>
                </div>
            </div>
            <div class="form-group {% if localized_form.content.vars.errors|length %} has-error {% endif %}">
                <label class="col-sm-2 control-label">{{ 'content'|trans }}:</label>
                <div class="col-sm-10">
                    <div class="tinymce">
                    </div>
                    {{ form_widget(localized_form.content) }}
                    <div class="text-danger">
                        {{ form_errors(localized_form.content) }}
                    </div>
                </div>
            </div>
            <div class="form-group {% if localized_form.meta_title.vars.errors|length %} has-error {% endif %}">
                <label class="col-sm-2 control-label">{{ 'meta_title'|trans }}:</label>
                <div class="col-sm-10">
                    {{ form_widget(localized_form.meta_title) }}
                    <div class="text-danger">
                        {{ form_errors(localized_form.meta_title) }}
                    </div>
                </div>
            </div>
            <div class="form-group {% if localized_form.meta_description.vars.errors|length %} has-error {% endif %}">
                <label class="col-sm-2 control-label">{{ 'meta_description'|trans }}:</label>
                <div class="col-sm-10">
                    {{ form_widget(localized_form.meta_description) }}
                    <div class="text-danger">
                        {{ form_errors(localized_form.meta_description) }}
                    </div>
                </div>
            </div>
            <div class="form-group {% if localized_form.meta_keywords.vars.errors|length %} has-error {% endif %}">
                <label class="col-sm-2 control-label">{{ 'meta_keywords'|trans }}:</label>
                <div class="col-sm-10">
                    {{ form_widget(localized_form.meta_keywords) }}
                    <div class="text-danger">
                        {{ form_errors(localized_form.meta_keywords) }}
                    </div>
                </div>
            </div>
        </fieldset>
    </div>