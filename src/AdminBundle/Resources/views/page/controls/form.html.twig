<div class="tabs-container ibox">
    <ul class="nav nav-tabs">
        {% for key,locale in locales %}
        <li {% if key == 0 %} class="active" {% endif %}>
            <a data-toggle="tab" href="#tab-{{ locale }}">{{ ('tab_' ~ locale)|trans }}</a>
        </li>
        {% endfor %}
        <li>
            <a data-toggle="tab" href="#tab-general">
                {{ 'tab_general'|trans }}
            </a>
        </li>
    </ul>
    <div class="tab-content">
        {% for key,locale in locales %}
            <div id="tab-{{ locale }}" class="tab-pane {% if key == 0 %} active {% endif %}">
                {{ include ('@AdminBundle/Resources/views/page/tabs/locale.html.twig', {locale : locale} ) }}
            </div>
        {% endfor %}
        <div id="tab-general" class="tab-pane">
            {% include '@AdminBundle/Resources/views/page/tabs/general.html.twig' %}
        </div>
    </div>
</div>