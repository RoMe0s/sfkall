    <div class="panel-body">

        <fieldset class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    {{ 'slug'|trans }}:
                </label>
                <div class="col-sm-8">
                    {{ form_widget(form.slug) }}
                    <p class="text-danger">
                        {{ form_errors(form.slug) }}
                    </p>
                </div>
                <div class="col-sm-2">
                    <a class="col-sm-12 btn btn-info">{{ 'generate'|trans }}</a>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ 'status'|trans }}:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.status) }}
                    <p class="text-danger">
                        {{ form_errors(form.slug) }}
                    </p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ 'template'|trans }}:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.template) }}
                    <p class="text-danger">
                        {{ form_errors(form.slug) }}
                    </p>
                </div>
            </div>
        </fieldset>


    </div>
