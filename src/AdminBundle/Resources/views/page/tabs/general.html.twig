    <div class="panel-body">

        <fieldset class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    {{ 'slug'|trans }}:
                </label>
                <div class="col-sm-8">
                    {{ form_widget(form.slug, {'label': 'slug'|trans, 'attr' : {'class' : 'form-control', 'placeholder' : 'slug'|trans, 'required' : 'required' } } ) }}
                </div>
                <div class="col-sm-2">
                    <a class="col-sm-12 btn btn-info">{{ 'generate'|trans }}</a>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ 'status'|trans }}:</label>
                <div class="col-sm-10">
                    <select name="status" class="form-control">
                        <option value="0">{{ 'off'|trans }}</option>
                        <option value="1">{{ 'on'|trans }}</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ 'image'|trans }}:</label>
                <div class="col-sm-10">
                    <input name="image" type="text" class="form-control" placeholder="{{ 'image'|trans }}">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ 'template'|trans }}:</label>
                <div class="col-sm-10">
                    <select name="template" class="form-control">
                        <option value="first">first</option>
                        <option value="second">second</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ 'parent'|trans }}:</label>
                <div class="col-sm-10">
                    <select class="form-control">
                        <option>option 1</option>
                        <option>option 2</option>
                    </select>
                </div>
            </div>
        </fieldset>


    </div>
