{% extends '@AdminBundle/Resources/views/layouts/edit.html.twig' %}

{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ 'page edit'|trans }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_homepage') }}">{{ 'home'|trans }}</a>
                </li>
                <li class="active">
                    <strong>{{ 'page edit'|trans }}</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12 ibox">

                {{ form_start(form) }}

                <h1>
                    {{ form_errors(form) }}
                </h1>

                    {% include '@AdminBundle/Resources/views/page/controls/form.html.twig' %}

                    {% include '@AdminBundle/Resources/views/page/controls/buttons.html.twig' %}

                {{ form_end(form) }}

            </div>
        </div>

    </div>
{% endblock %}
